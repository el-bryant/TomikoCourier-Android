<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="@color/azul"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/logo_horizontal"
        android:scaleType="fitEnd"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo usuario"
        android:textColor="@color/naranja"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                app:cardBackgroundColor="@color/blanco"
                app:cardCornerRadius="25dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp" >

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp" >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civFotoPerfil"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circulo_naranja" />

                        <ImageView
                            android:id="@+id/ivCargarFoto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_camera"
                            android:tint="@color/blanco"
                            android:padding="20dp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvCargarFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Cargar foto"
                        android:textColor="@color/naranja"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15sp"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="DNI:"
                            android:textColor="@color/azul"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/etDni"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:textColor="@color/azul"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"
                            android:maxLength="8"
                            android:inputType="number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Apellidos:"
                            android:textColor="@color/azul"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/etApellidos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:textColor="@color/azul"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Nombres:"
                            android:textColor="@color/azul"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/etNombres"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:textColor="@color/azul"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"
                            android:inputType="textPersonName" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Celular:"
                            android:textColor="@color/azul"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/etCelular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:textColor="@color/azul"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"
                            android:maxLength="9"
                            android:inputType="phone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Correo:"
                            android:textColor="@color/azul"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/etCorreo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:textColor="@color/azul"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"
                            android:inputType="textEmailAddress" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="DirecciÃ³n:"
                            android:textColor="@color/azul"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <EditText
                            android:id="@+id/etDireccion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:textColor="@color/azul"
                            android:fontFamily="sans-serif-condensed"
                            android:textSize="15sp"
                            android:inputType="text" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/boton_naranja"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:fontFamily="sans-serif-black"
                android:textSize="15sp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>